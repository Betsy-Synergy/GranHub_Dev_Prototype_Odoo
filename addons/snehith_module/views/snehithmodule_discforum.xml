<odoo>
    <act_window
        id="snehithmodule_discforum_action"
        name="Discussion Forum"
        res_model="snehithmodule.discforum"/>

    <menuitem
        id="snehithmodule_discforum_menu"
        name="Discussion forum" 
        action="snehithmodule_discforum_action"
        parent=""/>

    <record id="snehithmodule_discforum_view_form" model="ir.ui.view">
        <field name="name">Disc Data Form</field>
        <field name="model">snehithmodule.discforum</field>
        <field name="arch" type="xml">
            <form string="Topic">
                <sheet>
                    <group>
                        <field name="name"/>	
                        <field name="description"/>
                        <field name="tags"/>
                        <field name="author"/>
                    </group>
                </sheet>
            </form>	       
        </field>
    </record>

    <record id="snehithmodule_discforum_view_tree" model="ir.ui.view">
        <field name="name">List of Topics</field>
        <field name="model">snehithmodule.discforum</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>	
                <field name="author"/>
            </tree>
        </field>
    </record>	
</odoo>


	       
	       